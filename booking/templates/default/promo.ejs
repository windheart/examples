<div class="col-xs-4">
    <h3>Промо-код <i class="glyphicon glyphicon-question-sign tour-booking-promo-help"></i></h3>
</div>
<div class="col-xs-8 tour-booking-section-content">

    <% if (status == 'error') { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <% if (status == 'success') { %>
        <div class="alert alert-success">Промокод подтвержден, скидка добавлена</div>
    <% } %>

    <div class="input-group">
        <input type="text" class="form-control" name="code" placeholder="У вас есть промокод?" value="<%= code %>">
      <span class="input-group-btn">
        <button class="btn btn-primary" id="tour-booking-promo-check" type="button">Проверить</button>
      </span>
    </div>
</div>

