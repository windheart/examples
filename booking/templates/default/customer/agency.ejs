<div class="row">
  <div class="form-group col-xs-6">
    <input class="form-control tour-booking-agency-name" type="text" placeholder="Название агентства" name="name" value="<%= name %>">
  </div>

  <div class="form-group col-xs-3">
    <input class="form-control" type="text" placeholder="Email" name="email" value="<%= email %>">
  </div>

  <div class="form-group col-xs-3">
    <input class="form-control" type="text" placeholder="Телефон" name="phone" value="<%= phone %>">
  </div>
</div>

<div class="row">
  <div class="form-group col-xs-12">
    <textarea class="form-control" rows="3" placeholder="Комментарии" name="comment"><%= comment %></textarea>
  </div>
</div>